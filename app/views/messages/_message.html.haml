.main-chat__message__contents
  .main-chat__message__contents__name
    = message.user.name
    .main-chat__message__contents__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message__contents__comment
    - if message.content.present?

.main-chat__message__contents__user
  .main-chat__message__contents__user__edit
    = message.user.name
    .main-chat__message__contents__user__times
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message__contents__user__days
    = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?